<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/margn_220"
            android:layout_height="@dimen/margn_100"
            android:src="@drawable/download" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margn_25"
            android:layout_marginTop="@dimen/margn_25"
            android:layout_marginRight="@dimen/margn_25"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="UserName"
                android:padding="@dimen/margn_5"
                android:textColor="@color/ApColor"
                android:textColorHint="@color/ApColor"
                android:textSize="@dimen/txt_size20" />

            <com.google.android.material.internal.BaselineLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margn_1"
                android:background="@color/ApColor" />

            <EditText
                android:id="@+id/edt_emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margn_10"
                android:background="@null"
                android:hint="Email"
                android:padding="@dimen/margn_5"
                android:textColor="@color/ApColor"
                android:textColorHint="@color/ApColor"
                android:textSize="@dimen/txt_size20" />

            <com.google.android.material.internal.BaselineLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margn_1"
                android:background="@color/ApColor" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margn_10"
                android:background="@null"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/margn_5"
                android:textColor="@color/ApColor"
                android:textColorHint="@color/ApColor"
                android:textSize="@dimen/txt_size20" />

            <com.google.android.material.internal.BaselineLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margn_1"
                android:background="@color/ApColor" />

            <EditText
                android:id="@+id/edt_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margn_10"
                android:background="@null"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="@dimen/margn_5"
                android:textColor="@color/ApColor"
                android:textColorHint="@color/ApColor"
                android:textSize="@dimen/txt_size20" />

            <com.google.android.material.internal.BaselineLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margn_1"
                android:background="@color/ApColor" />


            <LinearLayout
                android:id="@+id/lyl_registration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margn_30"
                android:background="@drawable/app_gradient_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/margn_10"
                    android:text="Registration"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margn_20"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/custom_loader_activity" />

</FrameLayout>